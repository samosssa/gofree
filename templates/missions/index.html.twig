{% extends 'base.html.twig' %}

{% block title %}Nos missions{% endblock %}

{% block body %}
    <div class="container">

        <h1 class ="my-3">Les missions!</h1>


        <div class="row">
            {% for miss in pagination.data %}

                {% include 'missions/_miss.html.twig' %}


            {% endfor %}

        </div>


        <div class="d-flex mt-5 justify-content-center">
            {% set page = pagination.page %}
            {% set pages = pagination.pages %}
            <ul class="pagination">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('missions_index', {'page' : page-1}) }}">&laquo;</a>
                </li>
                {%  for i in 1..pages %}
                    <li class="page-item {% if page == i %}active{% endif %}">
                        <a class="page-link" href="{{ path('missions_index', {'page' : i}) }}">{{ i }}</a>
                    </li>
                {%  endfor %}
                <li class="page-item {% if page == pages %}disable{% endif %}">
                    <a class="page-link" href="{{ path('missions_index', {'page' : page+1}) }}">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}

